# =============================================================================
# Production Environment Variables Template
# Copy this file to .env.prod and fill in the values.
# NEVER commit .env.prod to version control.
# =============================================================================

# --- Django ---
SECRET_KEY=<generate-a-64-char-random-key>
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DJANGO_SETTINGS_MODULE=config.settings.production

# --- Database (PostgreSQL) ---
DB_NAME=school_management
DB_USER=school_mgmt_user
DB_PASSWORD=<strong-db-password>
DB_HOST=postgres
DB_PORT=5432

# --- Redis ---
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_PASSWORD=<strong-redis-password>

# --- Celery ---
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/1

# --- Email (SMTP) ---
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=<your-email@gmail.com>
EMAIL_HOST_PASSWORD=<app-specific-password>
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# --- JWT ---
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# --- CORS ---
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# --- Sentry (Error Monitoring) ---
SENTRY_DSN=<your-sentry-dsn>

# --- AWS S3 / Cloudflare R2 (File Storage) ---
# AWS_ACCESS_KEY_ID=<key>
# AWS_SECRET_ACCESS_KEY=<secret>
# AWS_STORAGE_BUCKET_NAME=school-mgmt-media
# AWS_S3_REGION_NAME=ap-south-1
# AWS_S3_ENDPOINT_URL=<r2-endpoint-if-using-cloudflare>

# --- Frontend ---
VITE_API_BASE_URL=/api/v1

# --- Docker Ports ---
HTTP_PORT=80
